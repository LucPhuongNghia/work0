<div class='jumbotron'>
    <h1>Workout lounge!</h1>
    <p>Show your workout to other Athletes</p>
</div>

<h1 class='text-center'>Member List</h1>

<%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>

<div class="row">
    <% @athletes.each do |athlete| %>
        <div class='col-md-10 well member'>
            <%= athlete.full_name %>
            <% if current_user %>
                <%= link_to "Follow", friendships_path(friend_id: athlete.id), method: :post,
                class: 'btn btn-success pull-left' unless current_user.follow_or_same?(athlete) %>
            <% end %>
        </div>
    <% end %>
</div>